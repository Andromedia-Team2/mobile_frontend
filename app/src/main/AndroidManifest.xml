<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fs.monize">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Monize">
        <activity android:name=".ui.activity.transaction.DetilCreditActivity"></activity>
        <activity android:name=".ui.activity.transaction.DetilDebtActivity" />
        <activity
            android:name=".ui.activity.transaction.TransactionActivity"
            android:theme="@style/Theme.MonizeActionBar" />
        <activity android:name=".ui.activity.signout.SignOutActivity" />
        <activity android:name=".ui.activity.signin.SignInActivity" />
        <activity android:name=".ui.activity.dashboard.DashboardActivity" />
        <activity
            android:name=".ui.activity.splash.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>